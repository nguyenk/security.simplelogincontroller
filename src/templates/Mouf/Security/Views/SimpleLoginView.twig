<div class="smallcenterbox lightbox login_controller">
<form class='splash' action='{{ this.loginActionUrl }}'  method='post'>
	<input type='hidden' name='redirect' value='{{ this.redirecturl }}' />
	<h2 class="form-signin-heading">{{ this.titleLabel }}</h2>

	{% if displayBadCredentialsMessage  %}
		<div class="alert alert-danger">{{ badCredentialsMessage }}</div>
	{% endif %}
	<div>
		<label for='login'>{{ this.loginLabel }}</label>
		<input type='text' id='login' class='required' name='login' value="{{ this.login }}" />
	</div>
	<div>
		<label for='password'>{{ this.passwordLabel }}</label>
		<input type='password' id='password' name='password' />
	</div>
	{% if addRememberMeCheckbox %}
    <div>
		<label for='remember_me'>{{ this.rememberMeLabel }}</label>
		<input type='checkbox' id='remember_me' name='remember_me' />
	</div>
    {% endif %}
	<div>
		<button type='submit' name='action' value='login'>{{ this.loginSubmitLabel }}</button>
	</div>
	{% if this.forgotYourPasswordUrl %}
		<a href="{{ constant('ROOT_URL'~this.forgotYourPasswordUrl) }}" >{{ this.forgotYourPasswordLabel }}</a>
	{% endif %}
</form>
</div>